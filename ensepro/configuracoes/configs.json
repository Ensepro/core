{
    "frases": {
        "namlex": "../../arquivos/namlex-pt.txt",
        "regex": {
            "termo_relevante": ":(v-|adj|n|prop)",
            "palavra_adjetivo": ":adj$",
            "palavra_substantivo": ":n$",
            "palavra_preposicao": ":prp$",
            "palavra_substantivo_proprio": ":prop$",
            "palavra_verbo": "v-",
            "voz_passiva": "^fApass:pp$"
        },
        "verbos_de_ligacao": [
            "ser",
            "estar",
            "permanecer",
            "continuar",
            "parecer",
            "tornar",
            "ficar",
            "possuir",
            "ter",
            "precisar"
        ],
        "termos_relevantes": {
            "ignorar": [
                "existir",
                "vir"
            ]
        }
    },
    "sinonimos": {
        "linguagens": [
            "por",
            "eng"
        ]
    },
    "consulta": {
        "pesos": {
            "substantivo_proprio": 10,
            "substantivo_comum": 7,
            "substantivo_comum_sinonimo": 7,
            "verbo": 7,
            "verbo_sinonimo": 5,
            "verbo_nomilizado": 6,
            "verbo_nomilizado_sinonimo": 4
        }
    },
    "servidores": {
        "palavras": {
            "endpoint": "http://127.0.0.1",
            "porta": "8099",
            "servicos": {
                "analisar_frase": "/palavras/analisar/"
            }
        },
        "elastic_search": {
            "endpoint": "127.0.0.1",
            "porta": "9200",
            "settings": {
                "index_name": "ensepro_triplas",
                "index_type": "ensepro_tripla",
                "username": "",
                "password": ""
            }
        },
        "dbpedia_spotlight": {
            "endpoint": "http://api.dbpedia-spotlight.org",
            "confiancas": [0.8, 0.3],
            "servicos": {
                "spotlight": "/{lang}/annotate/"
            }
        },
        "knowledge_graph_search": {
            "endpoint": "https://kgsearch.googleapis.com/v1/entities",
            "key_file": "../.key",
            "servicos": {
                "search": ":search"
            }
        }
    },
    "logger": {
        "nome_arquivo": "/ensepro_log.log",
        "modo_arquivo": "w",
        "formato": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
        "default_logger_nivel": "DEBUG",
        "modulos": {
            "arvore": {
                "nivel": "DEBUG"
            },
            "cbc": {
                "nivel": "DEBUG"
            },
            "configuracoes": {
                "nivel": "DEBUG"
            },
            "consulta": {
                "nivel": "DEBUG",
                "localizar_referencia_substantivo_proprio": {
                    "nivel": "DEBUG"
                }
            },
            "elasticsearch": {
                "nivel": "DEBUG",
                "connection": {
                    "nivel": "DEBUG"
                },
                "helpers": {
                    "nivel": "DEBUG"
                },
                "loaders": {
                    "nivel": "DEBUG",
                    "dataset": {
                        "nivel": "DEBUG"
                    }
                },
                "queries": {
                    "nivel": "DEBUG"
                },
                "searches": {
                    "nivel": "DEBUG"
                }
            },
            "cln": {
                "nivel": "DEBUG",
                "complementos_nominais": {
                    "nivel": "DEBUG"
                },
                "locucao_verbal": {
                    "nivel": "DEBUG"
                },
                "termos_relevantes": {
                    "nivel": "DEBUG"
                },
                "tipo_frases": {
                    "nivel": "DEBUG",
                    "chatterbot_helper": {
                        "nivel": "DEBUG"
                    }
                },
                "voz": {
                    "nivel": "DEBUG"
                }
            },
            "servicos": {
                "nivel": "DEBUG",
                "palavras_service": {
                    "nivel": "DEBUG"
                },
                "dbpedia_spotlight_service": {
                    "nivel": "DEBUG"
                },
                "knowledge_graph_search_service": {
                    "nivel": "DEBUG"
                }
            },
            "sinonimos": {
                "nivel": "DEBUG"
            }
        }
    },
    "chatterbot": {
        "configuracoes": {
            "name": "TipoFrases",
            "storage_adapter": "chatterbot.storage.SQLStorageAdapter",
            "trainer": "chatterbot.trainers.ListTrainer",
            "show_training_progress": true,
            "read_only": true,
            "logic_adapters": [
                {
                    "import_path": "chatterbot.logic.BestMatch",
                    "statement_comparison_function": "chatterbot.comparisons.levenshtein_distance",
                    "response_selection_method": "chatterbot.response_selection.get_first_response"
                },
                {
                    "import_path": "chatterbot.logic.LowConfidenceAdapter",
                    "threshold": 0.20,
                    "default_response": "desconhecido"
                }
            ]
        },
        "treinamento": {
            "dicionario": {
                "alguem": "#algu√©m M S",
                "algum": "#algum <quant> DET",
                "quanto": "#quanto <clb> <interr> <quant> DET F P",
                "quando": "#quando <clb> <interr>",
                "o_que": "#o_que <clb> <interr> M S",
                "qual": "#qual <clb> <interr> DET M/F",
                "que": "#que <clb> <interr> DET",
                "quem": "#quem <clb> <interr> M/F S",
                "onde": "#onde <clb> <interr>",
                "aonde": "#aonde <clb> <interr>",
                "listar": "#listar <vH> <mv>",
                "buscar": "#buscar <vH> <mv>",
                "achar": "#achar <vH> <mv>",
                "encontrar": "#encontrar <vH> <mv>",
                "descobrir": "#descobrir <vH> <mv>",
                "mostrar": "#mostrar <vH> <mv>",
                "localizar": "#localizar <vH> <mv>",
                "obter": "#obter <vH> <mv>",
                "recuperar": "#recuperar <vH> <mv>",
                "conseguir": "#conseguir <vH> <mv>",
                "nomear": "#nomear <vH> <mv>",
                "dar": "#dar <mv> PR 3S SUBJ VFIN",
                "em": "#em <clb> <*>",
                "cidade": "#cidade <Lciv> F S",
                "dia": "#dia <temp> <dur> <per> <unit> M S",
                "vez": "#vez <temp> F P",
                "ser": "#ser <vK> <mv> PR 3S IND VFIN",
                "um": "#um <arti> M S"
            },
            "mapeamento": {
                "alguem": [
                    "$alguem"
                ],
                "algum": [
                    "$algum"
                ],
                "eh_um": [
                    "$ser $um"
                ],
                "quanto": [
                    "$quanto",
                    "$quanto $vez"
                ],
                "quando": [
                    "$quando",
                    "$em $que $dia"
                ],
                "o_que": [
                    "$o_que"
                ],
                "qual": [
                    "$qual",
                    "$que"
                ],
                "quem": [
                    "$quem"
                ],
                "onde": [
                    "$onde",
                    "$aonde",
                    "$em $que $cidade"
                ],
                "consulta": [
                    "$listar",
                    "$buscar",
                    "$achar",
                    "$encontrar",
                    "$descobrir",
                    "$mostrar",
                    "$localizar",
                    "$obter",
                    "$recuperar",
                    "$conseguir",
                    "$nomear",
                    "$dar"
                ]
            }
        }
    }
}
